<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"
    tools:context="project.guide.anu.travellanka.viewpackage.ActivityFirst">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"

        >

    </android.support.v4.view.ViewPager>


    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:textColor="#FFFFFF"
        android:text="  WELCOME TO SRI LANKA"

        android:layout_alignTop="@+id/viewPager"
        android:background="#B3000000"

        android:textAlignment="center"
        android:textSize="25dp"/>

/>

    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="107dp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="#CCFFFFFF"

        android:spinnerMode="dialog"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New City"
        android:id="@+id/button3"
        android:onClick="next"
        android:background="#CCFFFFFF"
        android:layout_above="@+id/name2"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/planets_spinner"
        android:layout_alignStart="@+id/planets_spinner" />
    <TextView
        android:id="@+id/name2"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:textColor="#FFFFFF"
        android:background="#B3000000"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
